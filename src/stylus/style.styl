@import "include/_reset.styl"
@import "include/_variable.styl"
@import "include/_mixin.styl"
@import "include/_keyframes.styl"

html,body
  height 100%

.txC
  text-align center

.none
  display none

#main_wrap
  width 100%
  height 100%
  position relative
  &.page-1,&.page-2
    background-color-animetion #14ff00, #f2ff86
  //page1
  .h1_wrap
    font-size 11vw
    letter-spacing 1vw
    padding 20% 0 10%
    font-family "aquino"
    color #ffa000
    contour #fff1da
    animation-duration 1s
    animation-fill-mode both
    span
      display inline-block
      animation leDanceInMiddle .55s ease infinite
      &:nth-child(1)
        animation-delay 0ms
      &:nth-child(2)
        animation-delay 250ms
      &:nth-child(3)
        animation-delay 500ms
      &:nth-child(4)
        animation-delay 750ms
        padding 0 30px 0 0
      &:nth-child(5)
        animation-delay 1000ms
      &:nth-child(6)
        animation-delay 1250ms
      &:nth-child(7)
        animation-delay 1500ms
      &:nth-child(8)
        animation-delay 1750ms
  .user_wrap
    font-size 3vw
    padding 4% 0 0
  .connect
    display block
    width 40%
    margin 10% auto 0
    padding 3%
    font-size 6vw
    position relative
    font-weight bold
    text-decoration none
    color #ffa000
    background #fff1da
    border-bottom solid 10px #ffa000
    border-radius 15px 15px 0 0
    &.page2
      margin 0 auto
  //page2
  .char_set
    .result_wrap
      width 100%
      padding 2% 0 0
      box-sizing border-box
      > div
        width 900px
        height 450px
        margin 0 auto
        padding 3% 0 0 50%
        box-sizing border-box
        &.char1
          background url(../img/1.png) no-repeat
          background-size 50% auto
        &.char2
          background url(../img/2.png) no-repeat
          background-size 50% auto
        &.char3
          background url(../img/3.png) no-repeat
          background-size 50% auto
        &.char4
          background url(../img/4.png) no-repeat
          background-size 50% auto
        .skill_title
          font-size 3vw
        .skill_text
          font-size 2vw
        .skill_effect
          font-size 2.5vw
        .item
          display block
          width 200px
          height 50px
          margin 7% 0 5%
          font-size 3vw
          color #ffa000
          font-weight bold
          text-align center
          line-height 50px
          border 2px solid #ffa000
          border-radius 10px
          background #fff
        .skill
          display block
          padding 0 0 0 5%
  .btn_wrap
    display block
    width 500px
    margin 0 auto
    button
      button_delete()
      display inline-block
      width 50px
      height 50px
      border-radius 50%
      border 2px solid #000
      margin 30px 100px 50px 0
      cursor pointer
      font-size 3vw
      color #000
      background #fff
      box-sizing border-box
      &:last-child
        margin 0

//page3
.index
  .container
    width 100%
    height auto
    margin 50px auto 0 auto
  #stage
    width 100%
    background-color #009365 !important
