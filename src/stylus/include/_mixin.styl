background-color-animetion(color1,color2)
  background linear-gradient(45deg, color1, color2, color1)
  background-size 600% 600%
  animation AnimationName 9s ease infinite

contour(contour_color)
  text-shadow contour_color 0.5vw 0.5vw 0px, contour_color -0.5vw 0.5vw 0px,
              contour_color 0.5vw -0.5vw 0px, contour_color -0.5vw -0.5vw 0px,
              contour_color 0px 0.5vw 0px, contour_color -0.5vw 0px 0px,
              contour_color 0.5vw 0px 0px, contour_color -0px -0.5vw 0px

hidden_test()
  text-indent 100%
  white-space nowrap
  overflow hidden

button_delete()
  background-color transparent
  border none
  cursor pointer
  outline none
  padding 0
  appearance none
